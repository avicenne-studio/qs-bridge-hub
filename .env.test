# Must always set to production
# @see {@link https://www.youtube.com/watch?v=HMM7GJC5E2o}
NODE_ENV=production

# Server
FASTIFY_CLOSE_GRACE_DELAY=1000
LOG_LEVEL=info

# Security
RATE_LIMIT_MAX=4 # 4 is for tests, increase if you need more
POLLER_INTERVAL_MS=1000

# Database
SQLITE_DB_FILE=":memory:"
HOST=0.0.0.0
PORT=3000

# Oracles (local mock servers for tests)
ORACLE_URLS=http://127.0.0.1:6101,http://127.0.0.1:6102,http://127.0.0.1:6103
ORACLE_SIGNATURE_THRESHOLD=0.6
ORACLE_COUNT=3

# Hub signing
HUB_KEYS_FILE=./test/fixtures/hub-keys.json

# Solana listener
SOLANA_WS_URL=ws://localhost:8900
SOLANA_FALLBACK_WS_URL=ws://localhost:8901
SOLANA_LISTENER_ENABLED=false
